---
interface Props {
  title: string;
  isLoggedIn?: boolean;
}

import '@/styles/globals.css';
import Menu from '@/components/Menu/Menu.astro';

const dataMenu = [{ name: 'Project List', link: '/project-list' }];
const { title, isLoggedIn = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Menu data={dataMenu} isLoggedIn={isLoggedIn} />
    <slot />
  </body>
</html>
